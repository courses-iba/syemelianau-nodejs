{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    ".env"
  ],
  "exclude": [
    "node_modules"
  ]
}
